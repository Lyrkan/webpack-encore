{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": false,
        "noImplicitThis": false,
        "alwaysStrict": true,
        "types": ["node"],
        "esModuleInterop": true
    },
    "include": [
        "declarations/**/*.d.ts",
        "index.js",
        "lib/**/*.js"
    ]
}